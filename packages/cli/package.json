{
  "name": "@pkprotocol/cli",
  "version": "0.2.0",
  "description": "CLI for Product Knowledge Protocol",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kodda-ai/pkp.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/kodda-ai/pkp/tree/main/packages/cli#readme",
  "bugs": {
    "url": "https://github.com/kodda-ai/pkp/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "pkp": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@pkprotocol/spec": "workspace:*",
    "@pkprotocol/static-generator": "workspace:*",
    "@pkprotocol/shared": "workspace:*",
    "@pkprotocol/skills": "workspace:*",
    "@anthropic-ai/sdk": "^0.52.0",
    "commander": "^13.0.0",
    "chalk": "^5.4.0",
    "yaml": "^2.6.0",
    "undici": "^7.0.0"
  },
  "devDependencies": {
    "vitest": "^2.1.0",
    "typescript": "^5.7.0",
    "@types/node": "^22.0.0"
  },
  "author": "Pedro / Kodda.ai",
  "license": "MIT"
}
