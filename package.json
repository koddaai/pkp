{
  "name": "pkp",
  "version": "0.1.0",
  "description": "Product Knowledge Protocol - Open standard for AI agent product knowledge",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kodda-ai/pkp.git"
  },
  "homepage": "https://github.com/kodda-ai/pkp#readme",
  "bugs": {
    "url": "https://github.com/kodda-ai/pkp/issues"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "pkp",
    "product-knowledge",
    "ai-agents",
    "mcp",
    "e-commerce"
  ],
  "author": "Pedro / Kodda.ai",
  "license": "MIT",
  "packageManager": "pnpm@10.29.2",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^22.0.0",
    "csv-parse": "^6.1.0",
    "next": "^15.1.0",
    "prettier": "^3.4.0",
    "turbo": "^2.4.0",
    "typescript": "^5.7.0",
    "vitepress": "^1.6.4"
  }
}
